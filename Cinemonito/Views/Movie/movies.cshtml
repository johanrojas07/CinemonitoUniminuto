@model IEnumerable<Cinemonito.Models.Movie>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>movies</title>
</head>
<body>
    <div class="row">
        @Html.ActionLink("Crear Pelicula", "createMovie", "Movie", routeValues: null, htmlAttributes: new { @style = "margin-top: 10px;", @class = "btn btn-primary col-md-4 col-md-offset-4", @role = "button" })
    </div>
    <div class="d-flex justify-content-center align-items-center container">
        <div class="row">
            <table class="table" style="margin-top: 10px; border: 2px solid #390ee6; background: #cfdef8;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Classification)
                    </th>>
                    <th>
                        @Html.DisplayNameFor(model => model.Synopsis)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Classification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Synopsis)
                        </td>
                        <td>
                            <a href="@Url.Action("deleteMovie", new { id = @item.Id})"><i class="glyphicon glyphicon-trash"></i></a>
                            <a href="@Url.Action("editMovie", new { id = @item.Id})"><i class="glyphicon glyphicon-edit"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</body>
</html>
